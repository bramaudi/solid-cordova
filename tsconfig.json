{
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"baseUrl": "./src",
		"paths": {
			"@pages/*": ["pages/*"]
		}
	}
}